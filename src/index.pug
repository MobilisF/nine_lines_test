include pug/project-settings.pug
include pug/mixins/mixins.pug

//g- (global) префикс для глобальных классов. (Например, для задания невидимых элементов g-hidden.)
//b- (block) префикс для выделения элементов, относящихся к структуре документа. 
//js- (JavaScript) префикс для выделения элементов для селекторов js. 

doctype html
html
	head(lang="en")
		include pug/metatags.pug
		+title('Главная')
		include pug/styles.pug
		link(href="https://fonts.googleapis.com/css?family=Roboto:500,900", rel="stylesheet")
		
	body
		include pug/svg.pug

		.nine-lines
			section.questionary
				.questionary-logo
					img.logo-img(src="images/logo.png" alt="")
				form.questionary-form
					input.form-name-line(type="text" placeholder="ИМЯ" value="Nikita")
					input.form-date-line(type="text" placeholder="ДАТА РОЖДЕНИЯ" value="18.02.1990")
					input.form-city-line(type="text" placeholder="ГОРОД" value="Ulyanovsk")
					input.form-contacts-line(type="text" placeholder="КОНТАКТНЫЕ ДАННЫЕ" value="nikitakalachev18@gmail.com")
				.questionary-img
					img.postlogo-img(src="images/postlogo.png" alt="")

			section.skills
				.skills-header
					p.skills-title Навыки
				form.skills-form
					mixin skills-mix( input, label, checked)
						.skills-mix
							input.skills-input(id=label type="checkbox" checked=checked value=input hidden)
							label.skills-label(for=label)= label
					+skills-mix("", "html5", true)
					+skills-mix("", "sass", true)
					+skills-mix("", "VanillaJS", false)
					+skills-mix("", "Git", true)
					+skills-mix("", "css3", true)
					+skills-mix("", "Less", false)
					+skills-mix("", "Angular", false)
					+skills-mix("", "Foundation", false)
					+skills-mix("", "БЭМ", true)
					+skills-mix("", "Gulp", true)
					+skills-mix("", "JQuery", false)
					+skills-mix("", "Bootstrap", false)
					
			section.js
				.js-speedo
					#wrapper
						svg#meter
							circle.circle.outline#outline_curves(cx="50%" cy="50%")
							circle.circle.range#low(cx="50%" cy="50%" stroke="#ffc815")
							circle.circle.range#avg(cx="50%" cy="50%" stroke="#a3cd3b")
							circle.circle.range#high(cx="50%" cy="50%" stroke="#0093d7")
							circle.circle#mask(cx="50%" cy="50%")
							circle.circle.outline#outline_ends(cx="50%" cy="50%")
						.meter-needle
							img#meter_needle(src="images/needle.png" alt="")
						input#slider(type="range" min="0" max="100" value="17")
						.js-title
							p.title-skill Мой уровень владения Java Script
							label#lbl(for="") 0%



		include pug/scripts.pug
